@model IEnumerable<DomainModels.Models.User>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Пользователи</h1>
</div>

<div class="row">

    @foreach (var user in ViewBag.Users as IEnumerable<DomainModels.Models.User>)
    {
        <div class="col-md-4">
            <h2>
                @Html.ActionLink(user.FIO, "About_User", new { user.Id })
            </h2>
            <p>@user.Login</p>
            <p>@user.Id</p>
            <h3>
                @Html.ActionLink("Редактировать", "Update")
            </h3>
            <h5>
                @Html.ActionLink("Удалить", "Delete", new { user.Id })
            </h5>
        </div>

    }
     
    </div>

<h2>
    @Html.ActionLink("Добавить пользователя", "Create")
</h2>
